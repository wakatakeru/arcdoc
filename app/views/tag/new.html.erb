<div class="container">
  <h1>タグの新規作成</h1>
  <hr>
  <%= form_for @tag, url: tag_index_path do |f| %>
    <div class="form-group">
      <%= f.label :name, 'タグ名', :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit '作成', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
